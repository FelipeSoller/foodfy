{% extends "parts/main.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/sessions-index.css">
    <link rel="stylesheet" href="/styles/admin-forms.css">
    <title>Recuperar Senha | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="session container">
        <form action="/admin/users/forgot-password" method="POST">
            <div class="title">
                <h2>Esqueceu a Senha?</h2>
            </div>

            <div class="item">
                <div>Email</div>
                <div>
                    <input
                        type="email"
                        name="email"
                        placeholder="Digite seu email para recuperar sua senha"
                        required
                        value="{{user.email}}"
                    >
                </div>
            </div>

            <div class="footer">
                <ul>
                    <li>
                        <a href="/admin/users/login">Voltar</a>
                    </li>
                    <li>
                        <button class="button" type="submit">Recuperar</button>
                    </li>
                </ul>
            </div>
        </form>
    </section>
{% endblock %}