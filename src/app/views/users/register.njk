{% extends "parts/admin.njk" %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin-forms.css">
    <title>Criar Usuário | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="container">
        <form action="/admin/users/register" method="POST">
            <div class="title">
                <h2>Criar Usuário</h2>

                <div>
                    <a href="/admin/users" class="button cancel">Cancelar</a>
                    <button class="button" type="submit" onclick="Validate.allFields(event)">Salvar</button>
                </div>
            </div>

            <div class="fields">
                {% include "parts/user-fields.njk" %}
            </div>
        </form>
    </section>
{% endblock %}