{% extends 'parts/admin.njk' %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin-forms.css">
    <title>Criar Receita | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="container">
        <form action="/admin/recipes" method="POST" enctype="multipart/form-data">
            <div class="title">
                <h2>Nova receita</h2>
                <div>
                    <a href="/admin/recipes" class="button cancel">Cancelar</a>
                    <button 
                        class="button" 
                        type="submit" 
                        onclick="Validate.allFields(event)"
                    >Salvar receita
                    </button>
                </div>
            </div>

            {% include "parts/recipes-fields.njk" %}
        </form>
    </section>
    
{% endblock %}