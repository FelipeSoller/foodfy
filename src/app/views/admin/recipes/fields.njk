<div class="item">
    <div>Imagens da Receita</div>
    <div class="gallery">
        <div class="photos-upload">
            <input 
                id="photos-input"
                type="file" 
                name="photos" 
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
            >
            <div class="images-add">
                <i class="material-icons">add</i>
            </div>                      
        </div>
        
        <div id="photos-preview">

        </div>
               
    </div>
</div>

<div class="item">
    <div>Escolha um chefe</div>
    <div>
        <select name="chef">
            {% for chef in chefOptions %}
                <option 
                    value="{{chef.id}}"
                    {% if recipe.chef_id == chef.id %}
                        selected
                    {% endif %}
                >
                    {{chef.name}}
                </option>
            {% endfor %} 
        </select>             
    </div>
</div>

<div class="item">
    <div>Título da Receita</div>
    <div>
        <input 
            type="text" 
            name="title" 
            value="{{recipe.title}}"
        >        
    </div>
</div>

<div class="item" id="ingredients">
    <div>Ingredientes</div>
    <div>
        {% if not recipe.ingredients %}
            <div class="ingredient">
                <input 
                    type="text" 
                    name="ingredients[]"
                    value="" 
                    required="required"
                >            
            </div>
        {% else %}
            {% for ingredient in recipe.ingredients %}
                <div class="ingredient">
                    <input 
                        type="text" 
                        name="ingredients[]"
                        value="{{ingredient}}"
                        required="required"
                    >            
                </div>
            {% endfor %}
        {% endif %}
    </div>    
</div>
<button type="button" class="add-ingredient">Adicionar Novo Ingrediente</button>

<div class="item" id="preparation">
    <div>Modo de preparo</div>
    <div>
        {% if not recipe.preparation %}        
            <div class="step">
                <input 
                    type="text" 
                    name="preparation[]"
                    value=""
                    required="required"
                >            
            </div>
        {% else %}
            {% for step in recipe.preparation %}
                <div class="step">
                    <input 
                        type="text" 
                        name="preparation[]"
                        value="{{step}}"
                        required="required"
                    >            
                </div>
            {% endfor %}
        {% endif %}
    </div>    
</div>
<button type="button" class="add-step">Adicionar Novo Passo</button>

<div class="item">
    <div>Informações adicionais</div>   
    <textarea 
        id="additional_information" 
        name="information"        
    >{{recipe.information}}</textarea>   
</div>

