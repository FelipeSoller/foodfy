{% extends 'parts/admin.njk' %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin-forms.css">
    <title>Editar Chef | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="container">
        <form action="/admin/chefs?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="title">
                <h2>Editar chef</h2>

                <div>
                    <button 
                        class="button button-delete" 
                        type="submit" 
                        form="form-delete"
                    >Deletar
                    </button>
                    <button 
                        class="button" 
                        type="submit" 
                        onclick="Validate.allFields(event)"
                    >Salvar chef
                    </button>
                </div>
            </div>

            {% include "parts/chefs-fields.njk" %}

            <input type="hidden" name="id" value={{chef.id}}>
        </form>

        <form id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">
            <div class="total-recipes" data-total={{chef.total_recipes}}></div>
            <input type="hidden" name="id" value={{chef.id}}>
            <input type="hidden" name="file_id" value="{{chef.file.id}}">
        </form>
    </section>
{% endblock %}