{% extends 'parts/admin.njk' %}

{% block head %}
    <link rel="stylesheet" href="/styles/admin-forms.css">
    <title>Criar Chef | Foodfy</title>
{% endblock %}

{% block content %}
    <section class="container">
        <form action="/admin/chefs" method="POST" enctype="multipart/form-data">
            <div class="title">
                <h2>Novo Chef</h2>
                <div>
                    <a href="/admin/chefs" class="button cancel">Cancelar</a>
                    <button 
                        class="button" 
                        type="submit" 
                        onclick="Validate.allFields(event)">Salvar chef
                    </button>
                </div>
            </div>

            {% include "parts/chefs-fields.njk" %}
        </form>
    </section>
{% endblock %}