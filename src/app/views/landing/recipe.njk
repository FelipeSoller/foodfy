{% extends "layout.njk" %}

{% block head %}

    <title>{{recipe.title}}</title>

{% endblock %}

{% block recipes %}

    <section class="recipes__detail-section container">

        <div class="banner__image-container">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
        </div>

        <div class="recipe-info">
            <h1>{{recipe.title}}</h1>
            <p>Por
                {{recipe.chef_id}}</p>
        </div>

        <div id="ingredients-section">
            <div class="section-title">
                <h3>Ingredientes</h3>
                <button class="btn-collapse" target="ingredients-section">esconder</button>
            </div>
            <div class="details">
                <ul>
                    {% for ingredients in recipe.ingredients %}
                        <li>
                            {{ingredients}}
                        </li>
                        {% endfor%}
                    </ul>
                </div>
            </div>

            <div id="preparation-section">
                <div class="section-title">
                    <h3>Modo de preparo</h3>
                    <button class="btn-collapse" target="preparation-section">esconder</button>
                </div>
                <div class="details">
                    <ul>
                        {% for ingredients in recipe.preparation %}
                            <li>
                                {{ingredients}}
                            </li>
                            {% endfor%}
                        </ul>
                    </div>
                </div>

                {% if recipe.information != '' %}
                    <div id="information-section">
                        <div class="section-title">
                            <h3>Informações Adicionais</h3>
                            <button class="btn-collapse" target="information-section">mostrar</button>
                        </div>
                        <div class="details hide-details">
                            <p>{{recipe.information}}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

    <script src="/scripts.js"></script>

{% endblock %}